.intro-page
    padding-top nav-height
    overflow: hidden
    .intro-page-img
        position absolute
        width 100%
        img
            display block
            width 100%
            height 210px
            object-fit cover    
    .intro-page-inner
        height 210px
        display flex
        flex-direction column
        justify-content center
        .intro-page-title, .intro-page-description
            position relative
            color white
            margin 0
        .intro-page-title
            font-size: 50px
            line-height: 48px
            font-weight: 700
        .intro-page-description
            font-size: 18px
            
if intro-style
    .intro-style
        @extend .intro-page .intro-page-img img
        position: absolute
        background: rgba(colors, .8)
