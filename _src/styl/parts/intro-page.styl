.intro-page
    padding-top nav-height
    overflow: hidden
    .intro-page-img
        position absolute
        width 100%
        background: colors
        img
            display block
            width 100%
            height 210px
            object-fit cover
    .intro-page-inner
        height 210px
        padding 45px 0
        .intro-page-title, .intro-page-description
            position relative
            color white
            margin 0
        .intro-page-title
            font-size: 50px
            font-weight: 700
        .intro-page-description
            font-size: 20px
