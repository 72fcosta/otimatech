.slice.destaques
    .destaques-main
        lost-utility clearfix
        .destaque
            lost-column 1/4 4
            position: relative
            height 210px
            overflow hidden
            border 8px solid cinza;
            background-clip padding-box
            .destaque-front.destaque-radio
                background: rgba(#87CDD2, .8)
            .destaque-front.destaque-fibra
                background: rgba(#EB5E50, .8)
            .destaque-rear
                position: absolute
                display block
                width 100%
                height 100%
                z-index 9
                .destaque-img
                    width 100%
                    height auto                
            .destaque-front
                position: absolute
                display flex
                flex-direction column
                align-items center
                justify-content space-around
                width 100%
                height 100%
                z-index 99
                transition: background-color .5s
                &:hover
                    background: rgba(black, .3)
                    .destaque-title
                        color white
                .destaque-title
                    color white
                    text-transform: uppercase
                    font-weight: bold
                    margin 0     
                a.btn
                    color colors
