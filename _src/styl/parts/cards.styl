.cards-group
	padding-bottom 30px
	ul.cards
		margin-bottom: 0
		li.inner-cards
			lost-column 1/3
			padding 20px 30px
			background: white
			box-shadow: 0 5px 12px 0 rgba(0,0,0,.15);
			border 8px solid rgba(black,.3);
			background-clip padding-box
			.title-cards-group
				overflow: hidden
				height 60px
				i.icon-cards
					float left
					width 55px
					height 54px
					line-height: 57px
					font-size: 55px
				.icon-one-card
					color: #EB5E50
					font-size: 48px //ajuste individual
				.icon-two-card
					color: #87CDD2
				.icon-three-card
					color: #22AD84
				.title-cards
					float left
					width calc(100% - 55px) //subtrair width icon-cards
					font-size: 30px
					line-height: 1
					margin-top 0
					font-weight: bold
					padding-left: 15px
			.content-cards-group
				height 205px
				margin 0 0 15px 0
				overflow hidden
			.saibamais-cards
				color white
				text-transform: uppercase
				&:after
					content "Saiba Mais"
				i.fa
					position relative
					top 1px
					font-size: 18px
