.intro-home
    position: relative
    height 600px
    background-image url("/assets/img/site-background.jpg")
    background-attachment fixed
    background-size cover
    background-position 100% 100%
    .intro-home-inner
        position absolute
        display flex
        flex-direction column
        text-align center
        justify-content center
        width 100%
        height 600px
        color white
        text-shadow -1px -1px 4px rgba(0,0,0,.7)
        .intro-home-title
            margin 0
            font-size: 60px
            line-height: 50px
            font-weight: 700
        .intro-home-description
            font-size: 30px
            font-weight: 100
    .button-arrow
        position: absolute
        bottom 0
        width 100%
        height 38px
        background: url('/assets/img/button-arrow.png') no-repeat center center
.intro-bottom
    background: colorp
    padding 30px 0
    .intro-bottom-inner
        display flex
        align-items center
        padding 0 15px
        .intro-bottom-item
            color white
            margin 0
        .btn
            margin-left: auto
            text-transform: uppercase
            font-weight: bold
        .intro-bottom-item-w
            .intro-bottom-title
                font-size: 40px
                font-weight: bold
            .intro-bottom-txt
                font-size: 20px
                font-weight 200


