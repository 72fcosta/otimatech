.intro-home
    height 80vh
    background-image url("/assets/img/site-background.jpg")
    background-attachment fixed
    background-size cover
    background-position 100% 100%
    .intro-home-inner
        position absolute
        display flex
        flex-direction column
        text-align center
        justify-content center
        width 100%
        height 80vh
        color white
        text-shadow -1px -1px 4px rgba(0,0,0,.7)
        .intro-home-title
            margin 0
            font-size: 60px
            line-height: 50px
            font-weight: 700
        .intro-home-description
            font-size: 30px
