.cards-group
    +below(1200px)
        ul.cards
            li.cards-inner
                .cards-title-group
                    .cards-title
                        font-size: 26px
    +below(1100px)
        ul.cards
            li.cards-inner
                padding: 20px
                .cards-title-group
                    .cards-title
                        font-size: 24px
    +below(1000px)
        padding-top: 30px
        ul.cards
            li.cards-inner
                .cards-title-group
                    height 48px
                    i.cards-icon
                        width 38px
                        height 38px
                        font-size: 40px
                    .cards-title
                        font-size: 20px
                        line-height: 1
                .cards-content-group
                    height 290px
    +below(900px)
        ul.cards
            li.cards-inner
                .cards-title-group
                    .cards-title
                        font-size: 18px
    +below(break-nav)
        ul.cards
            li.cards-inner:not(:last-child)
                margin-bottom: 10px
            li.cards-inner
                lost-column 1/1 1 0
                border-radius 0
                display flex
                align-items center
                padding 0 30px 0 15px
                height 70px
                border none
                .cards-title-group
                    display flex
                    align-items center
                    lost-column 9/10 3 0
                    .cards-title
                        font-size: 28px
                        line-height: 24px
                        margin 0
                .cards-content-group
                    display none
                .cards-btn-group
                    lost-column 1/10 3 0
                    .cards-saibamais
                        border 0
                        padding 0
                        width 40px
                        height 40px
                        border-radius 50%           
                        &:after
                            content ""
                            line-height: 40px
                            font-weight: bold
    +below(340px)
        ul.cards
            li.cards-inner
                .cards-title-group
                    i.cards-icon
                        width 42px
                        font-size: 40px
                    .cards-title
                        font-size: 24px
