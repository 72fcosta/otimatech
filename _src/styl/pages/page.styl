.page
    .main
        margin-bottom 10px
        .main-inner
            padding 20px
            .page-content
                lost-utility clearfix
                .sidebar
                    lost-column 4/14 2
                .sidemain
                    lost-column 10/14 2
                    overflow: hidden
                    background: white
                    padding: 40px 20px 20px 50px
                    box-shadow 0 0 1px 0 rgba(colors, .5)
                    margin-bottom 20px
                    .part-header
                        .part-title:first-child
                            margin-top 0
                        .part-title
                            color colors
                            font-weight: bold
                            text-align: left
                            text-transform: uppercase
                            margin 15px 0
                            i.fa
                                color colors + 80%
                        .part-subtitle  
                            position: relative
                            display inline-block
                            height 30px
                            line-height: 30px
                            color white
                            margin 0
                            background: colorp
                            padding: 0 8px
                            z-index 9
                        .part-img
                            position: relative
                            top -30px
                            width 100%
                            height auto
                    .part-content
                        overflow: hidden
                        background: white
                        lost-utility clearfix
    