.page.contato
    .page-content
        .main
            .part-phone, .part-whatsapp
                display flex
                align-items center
                justify-content center
                color white
                border 4px solid cinza
                font-weight: bold
                border-radius radius
                padding: 20px
                background: colors
                font-size: 28px
                p
                    margin 0
                    text-align: center            
                i.fa
                    font-size: 30px
                    margin-right: 10px
            .part-whatsapp
                background: #72D76C
                height 80px
                small
                    margin-right: 10px
            form
                .form-inner
                    lost-utility clearfix
                    margin-top 30px
                    .form-side
                        lost-column 1/2 2 30px
                        textarea
                            height 100px
                        i.fa
                            color #999
                        .form-group
                            lost-utility clearfix
                            .control-label
                                lost-column 3/7 2 
                            .input-group
                                lost-column 4/7 2
                                .input-group-addon
                                    cursor pointer
                .btn
                    margin-top 20px
                    float right
