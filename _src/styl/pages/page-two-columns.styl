.page-two-column, .post
    .content
        margin-bottom 10px
        .content-inner
            padding 20px
            .page-content
                lost-utility clearfix
                .sidebar
                    lost-column 4/14 2
                .main
                    lost-column 10/14 2
                    overflow: hidden
                    background: white
                    padding: 30px 20px 20px 50px
                    box-shadow 0 0 1px 0 rgba(colors, .5)
                    margin-bottom 20px
                    .part-header
                        .part-img
                            position: relative
                            overflow: hidden
                            width 100%
                            height 300px
                            margin-bottom: 15px
                            img
                                width 100%
                                height auto
                            .part-subtitle
                                position: absolute
                                bottom 0
                                right 0
                                color white
                                margin 0
                                background: colors
                                padding: 8px 13px
                                z-index 9
                    .part-content
                        overflow: hidden
                        background: white
                        lost-utility clearfix
                        .part-title
                            text-align: left
                            margin 20px 0 15px
                            padding-bottom: 15px
                            border-bottom 2px solid colorp
                            i.fa
                                color colorp
                                margin-right: 5px
    