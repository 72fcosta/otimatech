.post
    .main
        margin 35px 0
        .post-content
            lost-utility clearfix
            .part
                .part-content
                    overflow: hidden
                    padding 15px
                    margin-bottom 25px
                    .part-tags
                        display inline-block
                        color white
                        text-transform: uppercase
                        font-size: 14px
                        font-weight: bold
                        padding: 2px 10px
                        border-radius 10px
                        background: cinza - 80%
                    .part-title
                        margin 0
                        color colors
                        font-size: 48px
                        font-weight: bold
                        text-transform: uppercase
                    .part-date
                        display block
                        margin 10px 0 25px
                        padding 7px 0
                        border-top 1px solid cinza - 20%
                        border-bottom 1px solid cinza - 20%
