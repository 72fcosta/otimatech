.page.produtos
    .page-content
        .part-category
            .part-category-title
                text-transform: uppercase
                color colors
                font-weight: bold
                margin-bottom 15px
                i.fa
                    color colors + 80%
            .part-category-content
                lost-utility clearfix
                .part
                    position: relative
                    lost-column 1/2 2
                    height 370px
                    padding: 0
                    border 14px solid white
                    box-shadow 0 0 1px 0 rgba(colors, .5)
                    text-align: center
                    border-radius radius
                    .part-front
                        position: absolute
                        width 100%
                        height 240px
                        z-index 99
                        display flex
                        align-items flex-start
                        justify-content left
                        border 4px solid colors
                        &:hover
                            cursor pointer
                        &:hover ~ .part-rear .part-img
                            transform scale(0.9, 0.9)
                        .part-title
                            color colorp
                            padding 10px 20px 
                            border-radius 0 0 radius 0
                            background: rgba(white, .9)
                            margin 0
                    .part-rear
                        position: relative
                        overflow: hidden
                        display block
                        width 100%
                        height 240px
                        z-index 9
                        .part-img
                            transform: scale(1, 1)
                            transition-duration: 0.4s;
                            width auto
                            height 100%
                    .part-content
                        text-align: left
                        overflow: hidden
                        background: colors
                        width 100%
                        height 90px
                        padding 15px
                        a
                            font-size: 15px
                            line-height: 19px
                            color white
                            text-decoration: none
                            font-weight: bold
