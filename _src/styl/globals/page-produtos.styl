.page.produtos
    .page-content
        .sidemain
            .part-content
                .part-content-inner
                    lost-column 1/2 2
                    text-align: center
                    margin-bottom 20px
                    .part-img
                        border 4px solid colors
                        background: white
                        overflow: hidden
                        display block
                        width 100%
                        height 240px
                        img
                            transform: scale(1, 1)
                            width auto
                            height 100%
                            transition-duration: 0.4s;
                        &:hover img
                            transform scale(0.94, 0.94)
                    .part-txt
                        text-align: left
                        overflow: hidden
                        background: colors
                        width 100%
                        height 81px
                        padding 10px 10px 10px 17px
                        a
                            font-size: 15px
                            line-height: 19px
                            color white
                            text-decoration: none
